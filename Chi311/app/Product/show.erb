<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @product.SKU %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @product.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">SKU</div>
            <div class="itemValue"><%= @product.SKU %></div>
          </li>
      
          <li>
            <div class="itemLabel">Desc</div>
            <div class="itemValue"><%= @product.Desc %></div>
          </li>
      
          <li>
            <div class="itemLabel">Qty</div>
            <div class="itemValue"><%= @product.Qty %></div>
          </li>
      
    </ul>
  </div>

</div>
